    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cc-client",
                    "--package=covert-connect"
                ],
                "filter": {
                    "name": "cc-client",
                    "kind": "bin"
                }
            },
            "args": ["--config", "./conf/client.yaml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug Tests (Win)",
            "program": "${workspaceRoot}/target/debug/tests.exe",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "tests"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug Tests TMP (Win)",
            "program": "${workspaceRoot}/target/debug/deps/client_server-7d4e5d00ed5e2a44.exe",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "tests"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=cc-server",
                    "--package=covert-connect"
                ],
                "filter": {
                    "name": "cc-server",
                    "kind": "bin"
                }
            },
            "args": ["--config", "./conf/server.yaml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'covert-connect'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=covert-connect",
                    "--package=covert-connect"
                ],
                "filter": {
                    "name": "covert-connect",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}