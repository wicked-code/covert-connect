{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "flutter",
            "request": "launch",
            "type": "dart"
        },
        {
            "name": "flutter fake data",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define",
                "MOCK_SERVICE="
            ]
        },
        {
            "name": "flutter fake data (profile)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "args": [
                "--dart-define",
                "MOCK_SERVICE="
            ]
        },
        {
            "name": "flutter (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "flutter (release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug rust (Win)",
            "program": "${workspaceFolder}/build/windows/x64/runner/Debug/covert_connect.exe",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "copy-pdb"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug rust (Macos)",
            "program": "${workspaceFolder}/build/macos/Build/Products/Debug/covert_connect.app",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Debug rust (Win with buld)",
            "program": "${workspaceFolder}/build/windows/x64/runner/Debug/covert_connect.exe",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "environment": [],
            "args": [],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build-all-windows"
        },
    ]
}